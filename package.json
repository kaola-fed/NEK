{
  "name": "nek",
  "version": "1.1.4",
  "description": "Nice easy Kaoka project toolkit.",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "mocha --recursive --compilers js:babel-core/register",
    "lint": "eslint --ext js src",
    "build": "babel src -d lib",
    "delete": "rm -rf lib",
    "prepublishOnly": "run-s delete build",
    "postversion": "git push && git push --tags",
    "watch": "babel -w src/ -d lib",
    "dev": "npm run watch & nodemon --watch lib --debug ./lib/index.js build -k 123"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaola-fed/NEK"
  },
  "keywords": [
    "Kaola",
    "toolkit",
    "freemarker",
    "RegularJS",
    "template"
  ],
  "author": "Kaola",
  "license": "MIT",
  "preferGlobal": true,
  "bin": {
    "nek": "lib/index.js"
  },
  "bugs": {
    "url": "https://github.com/kaola-fed/NEK/issues"
  },
  "homepage": "https://github.com/kaola-fed/NEK#readme",
  "dependencies": {
    "babel-runtime": "^6.18.0",
    "console-stamp": "^0.2.4",
    "decamelize": "^1.2.0",
    "handlebars": "^4.0.5",
    "js-beautify": "^1.6.4",
    "mkdirp-promise": "^3.0.1",
    "moky": "^1.1.4",
    "rc": "^1.1.6",
    "request": "^2.75.0",
    "request-promise": "^4.1.1",
    "uppercamelcase": "^1.1.0",
    "yargs": "^6.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "chai": "^3.5.0",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0"
  },
  "engines": {
    "node": ">= 4"
  }
}
